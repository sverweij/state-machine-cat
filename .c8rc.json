{
  "all": true,
  "src": "src",
  "statements": 100,
  "branches": 100,
  "functions": 100,
  "lines": 100,
  "extensions": [".ts", ".mts", ".js", ".mjs"],
  "exclude": [
    ".eslintrc.js",
    ".mocharc.cjs",
    "**/*.d.ts",
    "**/*.d.mts",
    "coverage/**/*",
    "dist/**/*",
    "doc/**/*",
    "docs/**/*",
    "public/**/*",
    "src/**/*-parser.mjs",
    "src/cli/main.mts"
  ],
  "reporter": ["text-summary", "lcov", "html", "json-summary"]
}
